{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "Image",
      "url": "https://i.imgur.com/C0tYUbv.jpg",
      "size": "stretch"
    },
    {
      "type": "TextBlock",
      "spacing": "medium",
      "size": "default",
      "weight": "bolder",
      "text": "Welcome to Niles, the DevOps ChatBot",
      "wrap": true,
      "maxLines": 0
    },
    {
      "type": "TextBlock",
      "size": "default",
      "isSubtle": "yes",
      "text": "Niles is an interactive interface that if asked could perform certain actions on your behalf in Github and Azure DevOps, for more Info, please visit the links bellow",
      "wrap": true,
      "maxLines": 0
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "Source code",
      "url": "https://github.com/chatops-demo/niles"
    },
    {
      "type": "Action.OpenUrl",
      "title": "Available commands and syntax",
      "url": "https://github.com/chatops-demo/niles/blob/master/README.md"
    },
    {
      "type": "Action.OpenUrl",
      "title": "Submit an Idea",
      "url": "https://github.com/chatops-demo/niles/issues"
    }
  ]
}